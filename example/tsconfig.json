{
  "compileOnSave": false,
	"compilerOptions": {
    "outDir": "dist",
		"target": "es2015",
    "moduleResolution": "node",
		"jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules"
	]
}
